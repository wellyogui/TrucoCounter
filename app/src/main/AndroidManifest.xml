<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wellington.br.com.trucocounter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="wellington.br.com.tentoCounter.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="wellington.br.com.tentoCounter.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name="wellington.br.com.tentoCounter.InverseActivity" />
        <activity android:name="wellington.br.com.tentoCounter.Config_activity" />
        <activity android:name="wellington.br.com.tentoCounter.tutorialActivity"></activity>
    </application>

</manifest>